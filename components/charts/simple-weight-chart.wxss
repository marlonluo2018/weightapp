/* simple-weight-chart.wxss */
.simple-weight-chart {
  background: white;
  border-radius: 16rpx;
  padding: 25rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.chart-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.chart-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.chart-subtitle {
  font-size: 22rpx;
  color: #999;
}

.chart-container {
  width: 100%;
}

.chart-bars {
  display: flex;
  align-items: flex-end;
  height: 200rpx;
  padding: 20rpx 0;
  gap: 15rpx;
  overflow-x: auto;
}

.bar-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  min-width: 60rpx;
  flex: 1;
}

.bar-label {
  font-size: 20rpx;
  color: #666;
  margin-bottom: 10rpx;
  text-align: center;
}

.bar-wrapper {
  position: relative;
  width: 40rpx;
  height: 160rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-end;
}

.bar {
  width: 100%;
  border-radius: 6rpx 6rpx 0 0;
  transition: all 0.3s ease;
  min-height: 10rpx;
}

.bar-value {
  font-size: 18rpx;
  color: #333;
  font-weight: bold;
  margin-top: 8rpx;
  text-align: center;
}

.no-data {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 200rpx;
  text-align: center;
}

.no-data-text {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.no-data-tip {
  font-size: 22rpx;
  color: #ccc;
}

