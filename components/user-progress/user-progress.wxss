/* user-progress.wxss */
.user-progress {
  padding: 30rpx;
  margin-bottom: 0;
}

.user-info {
  display: flex;
  align-items: center;
  background-color: #48bb78;
  color: white;
  border-radius: 16rpx;
  padding: 30rpx;
  text-align: center;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.08);
  margin-bottom: 20rpx;
}

.avatar-section {
  margin-right: 30rpx;
  position: relative;
}

.avatar-container {
  position: relative;
}

.avatar-image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  background-color: rgba(255, 255, 255, 0.1);
}

.avatar-placeholder {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.avatar-section:active .avatar-placeholder {
  transform: scale(0.95);
  background-color: rgba(255, 255, 255, 0.3);
}

.avatar-emoji {
  font-size: 40rpx;
}

.avatar-edit {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 24rpx;
  height: 24rpx;
  background-color: #07c160;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid white;
}

.edit-icon {
  font-size: 16rpx;
  color: white;
}

.user-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.nickname {
  font-size: 32rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 8rpx;
}

.persistence-days {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
}

.persistence {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
}

.weight-info {
  display: flex;
  align-items: center;
}

.current-weight {
  font-size: 32rpx;
  font-weight: bold;
  color: white;
}

.today-checkin {
  background-color: white;
  border-radius: 16rpx;
  padding: 25rpx;
  margin-bottom: 0;
}

.stats-grid {
  display: flex;
  justify-content: space-around;
  margin-bottom: 20rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.stat-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #07c160;
  margin-bottom: 5rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
}

/* 横向排列的打卡按钮 */
.action-buttons {
  display: flex;
  justify-content: space-between;
  gap: 15rpx;
}

.action-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 10rpx;
  background-color: #f8f8f8;
  border-radius: 12rpx;
  border: none;
  margin: 0;
  transition: all 0.3s ease;
}

.action-btn:active {
  transform: scale(0.95);
}

.action-icon {
  font-size: 36rpx;
  margin-bottom: 8rpx;
}

.action-text {
  font-size: 22rpx;
  color: #333;
  text-align: center;
}

/* 为不同按钮添加主题色 - 与统计页面保持一致 */
.action-btn:nth-child(1) {
  background-color: #48bb78;
  color: white;
}

.action-btn:nth-child(1) .action-text {
  color: white;
}

.action-btn:nth-child(1):active {
  background-color: #38a169;
}

.action-btn:nth-child(2) {
  background-color: #ed8936;
  color: white;
}

.action-btn:nth-child(2) .action-text {
  color: white;
}

.action-btn:nth-child(2):active {
  background-color: #dd7724;
}

.action-btn:nth-child(3) {
  background-color: #4299e1;
  color: white;
}

.action-btn:nth-child(3) .action-text {
  color: white;
}

.action-btn:nth-child(3):active {
  background-color: #3182ce;
}

/* 里程碑庆祝 */
.milestone-celebration {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  animation: fadeIn 0.3s ease;
}

.celebration-content {
  background: white;
  border-radius: 24rpx;
  padding: 40rpx;
  margin: 40rpx;
  text-align: center;
  max-width: 500rpx;
  animation: slideUp 0.5s ease;
}

.celebration-emoji {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  display: block;
  animation: bounce 1s ease infinite;
}

.celebration-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
  display: block;
}

.celebration-desc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 30rpx;
  display: block;
  line-height: 1.5;
}

.celebration-btn {
  background: linear-gradient(135deg, #07c160 0%, #95ec69 100%);
  color: white;
  border: none;
  border-radius: 25rpx;
  padding: 15rpx 40rpx;
  font-size: 28rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 15rpx rgba(7, 193, 96, 0.3);
}

.celebration-btn:active {
  transform: scale(0.95);
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

@keyframes slideUp {
  from {
    transform: translateY(100rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

@keyframes bounce {
  0%, 20%, 50%, 80%, 100% {
    transform: translateY(0);
  }
  40% {
    transform: translateY(-10rpx);
  }
  60% {
    transform: translateY(-5rpx);
  }
}

