/**weight.wxss**/
.page-header {
  text-align: center;
  margin-bottom: 30rpx;
}

.page-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #2d3748;
}

.current-weight {
  text-align: center;
  background-color: #48bb78;
  color: white;
  border-radius: 16rpx;
}

.current-weight .card-title {
  color: white;
  opacity: 0.9;
}

.weight-display {
  display: flex;
  align-items: baseline;
  justify-content: center;
  margin: 20rpx 0;
}

.weight-value {
  font-size: 80rpx;
  font-weight: bold;
  line-height: 1;
}

.weight-unit {
  font-size: 30rpx;
  margin-left: 10rpx;
  opacity: 0.8;
}

.update-time {
  font-size: 24rpx;
  opacity: 0.8;
}

.quick-record {
  margin-top: 20rpx;
}

.weight-input-section {
  margin-top: 20rpx;
}

.input-group {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
}

.weight-input {
  width: 200rpx;
  height: 80rpx;
  font-size: 40rpx;
  font-weight: bold;
  text-align: center;
  border: 2rpx solid #e5e5e5;
  border-radius: 12rpx;
  margin-right: 20rpx;
}

.unit-text {
  font-size: 30rpx;
  color: #666;
  font-weight: 500;
}

.date-section, .time-section {
  margin-bottom: 25rpx;
}

.section-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  font-weight: 500;
}

.date-picker, .time-picker {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  border: 1rpx solid #e5e5e5;
}

.date-picker text, .time-picker text {
  font-size: 28rpx;
  color: #333;
}

.calendar-icon, .clock-icon {
  font-size: 30rpx;
  opacity: 0.6;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  font-weight: 500;
}

.textarea {
  height: 100rpx;
  resize: none;
}

.submit-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 12rpx;
  margin-top: 30rpx;
}

.submit-btn[disabled] {
  background-color: #ccc !important;
  color: #999 !important;
}

.weight-trend {
  margin-top: 30rpx;
}

.trend-stats {
  display: flex;
  justify-content: space-around;
  margin-top: 20rpx;
}

.trend-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.trend-label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.trend-value {
  font-size: 30rpx;
  font-weight: bold;
}

.weight-up {
  color: #fa5151;
}

.weight-down {
  color: #07c160;
}

.history-records {
  margin-top: 30rpx;
}

.history-list {
  margin-top: 20rpx;
}

.history-item {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.history-item:last-child {
  border-bottom: none;
}

.history-info {
  flex: 1;
}

.history-weight {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.weight-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-right: 15rpx;
}

.weight-change {
  font-size: 24rpx;
  font-weight: 500;
  padding: 4rpx 8rpx;
  border-radius: 6rpx;
}

.history-date {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 5rpx;
  display: block;
}

.history-notes {
  font-size: 24rpx;
  color: #999;
  display: block;
}

.btn-small {
  padding: 8rpx 16rpx;
  font-size: 22rpx;
  min-height: auto;
  line-height: 1.5;
  margin: 0;
}

.weight-goal {
  margin-top: 30rpx;
  
}

.goal-info {
  display: flex;
  justify-content: space-around;
  margin-top: 20rpx;
}

.goal-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.goal-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.goal-value {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.positive {
  color: #ff6b6b;
}

.negative {
  color: #07c160;
}