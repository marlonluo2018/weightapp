/**diet.wxss**/
.page-header {
  text-align: center;
  margin-bottom: 30rpx;
}

.page-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #2d3748;
}

.meal-types {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  margin-top: 20rpx;
}

.meal-type-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 25rpx 20rpx;
  background-color: #f7fafc;
  border: 1rpx solid #e2e8f0;
  border-radius: 12rpx;
  margin: 0;
  transition: all 0.2s ease;
}

.meal-type-btn:active {
  background-color: #edf2f7;
}

.meal-type-btn.active {
  background-color: #48bb78;
  color: white;
  border-color: #48bb78;
}

.meal-type-btn:active {
  background-color: #ffe8d6;
}

.meal-icon {
  font-size: 50rpx;
  margin-bottom: 10rpx;
}

.meal-type-btn text {
  font-size: 26rpx;
  color: #333;
}

/* AI识图功能样式 */
.ai-recognition {
  margin-bottom: 30rpx;
  padding: 20rpx;
  background-color: #f0f9ff;
  border-radius: 12rpx;
  border: 1rpx solid #bae6fd;
}

.ai-title {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.ai-icon {
  font-size: 32rpx;
  margin-right: 10rpx;
}

.ai-text {
  font-size: 28rpx;
  font-weight: bold;
  color: #0369a1;
}

.ai-buttons {
  display: flex;
  justify-content: space-between;
  margin-bottom: 15rpx;
}

.ai-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 48%;
  height: 120rpx;
  background-color: white;
  border: 1rpx solid #bae6fd;
  border-radius: 10rpx;
  padding: 0;
  margin: 0;
}

.ai-btn:active {
  background-color: #e0f2fe;
}

.ai-btn-icon {
  font-size: 40rpx;
  margin-bottom: 8rpx;
}

.ai-btn text {
  font-size: 24rpx;
  color: #0369a1;
}

.ai-status {
  text-align: center;
  padding: 10rpx;
  background-color: rgba(255, 255, 255, 0.7);
  border-radius: 8rpx;
}

.ai-status-text {
  font-size: 24rpx;
  color: #0369a1;
}

.diet-form {
  margin-top: 20rpx;
}

.form-item {
  margin-bottom: 30rpx;
}
.form-item .input {
  height: 80rpx;
  line-height: 48rpx;
}
.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  font-weight: 500;
}

.textarea {
  height: 120rpx;
  resize: none;
}

.submit-section {
  margin: 40rpx 0;
  text-align: center;
}

.submit-btn {
  width: 80%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 40rpx;
}

.submit-btn[disabled] {
  background-color: #ccc !important;
  color: #999 !important;
}

.today-records {
  margin-top: 30rpx;
}

.meal-group {
  margin-bottom: 30rpx;
}

.meal-group:last-child {
  margin-bottom: 0;
}

.meal-group-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 0;
  border-bottom: 2rpx solid #f0f0f0;
  margin-bottom: 15rpx;
}

.meal-group-title text:first-child {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.meal-total-calories {
  font-size: 26rpx;
  color: #ff9500;
  font-weight: 500;
}

.record-list {
  padding-left: 20rpx;
}

.record-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #f8f8f8;
}

.record-item:last-child {
  border-bottom: none;
}

.record-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.record-food {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.record-portion {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 5rpx;
}

.record-calories {
  font-size: 24rpx;
  color: #ff9500;
}

.btn-small {
  padding: 8rpx 16rpx;
  font-size: 22rpx;
  min-height: auto;
  line-height: 1.5;
  margin: 0;
}

/* 调试信息面板样式 */
.debug-toggle {
  margin-top: 10px;
  text-align: center;
}

.debug-btn {
  font-size: 12px;
  color: #999;
  background: transparent;
  border: 1px solid #ddd;
  border-radius: 4px;
  padding: 4px 8px;
  line-height: 1.2;
}

.debug-panel {
  margin-top: 10px;
  padding: 10px;
  background-color: #f5f5f5;
  border-radius: 8px;
  border: 1px solid #ddd;
}

.debug-title {
  font-size: 14px;
  font-weight: bold;
  margin-bottom: 8px;
  color: #333;
}

.debug-item {
  display: flex;
  margin-bottom: 6px;
  font-size: 12px;
}

.debug-label {
  flex: 1;
  color: #666;
}

.debug-value {
  flex: 2;
  color: #333;
  word-break: break-all;
}

.debug-close {
  margin-top: 8px;
  font-size: 12px;
  color: #666;
  background: #fff;
  border: 1px solid #ddd;
  border-radius: 4px;
  padding: 4px 8px;
  line-height: 1.2;
}

/* 今日饮食统计 */
.today-summary {
  margin-top: 30rpx;
}

.summary-stats {
  display: flex;
  justify-content: space-around;
  margin-top: 20rpx;
}

.summary-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.summary-label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.summary-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}