/**diet.wxss**/
.page-header {
  text-align: center;
  margin-bottom: 30rpx;
}

.page-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #2d3748;
}

.meal-types {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  margin-top: 20rpx;
}

.meal-type-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 25rpx 20rpx;
  background-color: #f7fafc;
  border: 1rpx solid #e2e8f0;
  border-radius: 12rpx;
  margin: 0;
  transition: all 0.2s ease;
}

.meal-type-btn:active {
  background-color: #edf2f7;
}

.meal-type-btn.active {
  background-color: #48bb78;
  color: white;
  border-color: #48bb78;
}

.meal-type-btn:active {
  background-color: #ffe8d6;
}

.meal-icon {
  font-size: 50rpx;
  margin-bottom: 10rpx;
}

.meal-type-btn text {
  font-size: 26rpx;
  color: #333;
}

.diet-form {
  margin-top: 20rpx;
}

.form-item {
  margin-bottom: 30rpx;
}
.form-item .input {
  height: 80rpx;
  line-height: 48rpx;
}
.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  font-weight: 500;
}

.textarea {
  height: 120rpx;
  resize: none;
}

.submit-section {
  margin: 40rpx 0;
  text-align: center;
}

.submit-btn {
  width: 80%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 40rpx;
}

.submit-btn[disabled] {
  background-color: #ccc !important;
  color: #999 !important;
}

.today-records {
  margin-top: 30rpx;
}

.meal-group {
  margin-bottom: 30rpx;
}

.meal-group:last-child {
  margin-bottom: 0;
}

.meal-group-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 0;
  border-bottom: 2rpx solid #f0f0f0;
  margin-bottom: 15rpx;
}

.meal-group-title text:first-child {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.meal-total-calories {
  font-size: 26rpx;
  color: #ff9500;
  font-weight: 500;
}

.record-list {
  padding-left: 20rpx;
}

.record-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #f8f8f8;
}

.record-item:last-child {
  border-bottom: none;
}

.record-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.record-food {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.record-portion {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 5rpx;
}

.record-calories {
  font-size: 24rpx;
  color: #ff9500;
}

.btn-small {
  padding: 8rpx 16rpx;
  font-size: 22rpx;
  min-height: auto;
  line-height: 1.5;
  margin: 0;
}

.today-summary {
  margin-top: 30rpx;
}

.summary-stats {
  display: flex;
  justify-content: space-around;
  margin-top: 20rpx;
}

.summary-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.summary-label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.summary-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}