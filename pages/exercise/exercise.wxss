/**exercise.wxss**/
.page-header {
  text-align: center;
  margin-bottom: 30rpx;
}

.page-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #2d3748;
}

.exercise-types {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
  margin-top: 20rpx;
}

.exercise-type-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 25rpx 15rpx;
  background-color: #f7fafc;
  border: 1rpx solid #e2e8f0;
  border-radius: 12rpx;
  margin: 0;
  transition: all 0.2s ease;
}

.exercise-type-btn:active {
  background-color: #edf2f7;
}

.exercise-type-btn.active {
  background-color: #48bb78;
  color: white;
  border-color: #48bb78;
}

.exercise-type-btn:active {
  background-color: #d8f0d8;
}

.exercise-icon {
  font-size: 50rpx;
  margin-bottom: 10rpx;
}

.exercise-type-btn text {
  font-size: 24rpx;
  color: #333;
}

.exercise-form {
  margin-top: 20rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-item .input {
  height: 80rpx;
  line-height: 48rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  font-weight: 500;
}

.textarea {
  height: 200rpx;
  resize: none;
}

.submit-section {
  margin: 40rpx 0;
  text-align: center;
}

.submit-btn {
  width: 80%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 40rpx;
}

.submit-btn[disabled] {
  background-color: #ccc !important;
  color: #999 !important;
}

.today-records {
  margin-top: 30rpx;
}

.record-list {
  margin-top: 20rpx;
}

.record-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.record-item:last-child {
  border-bottom: none;
}

.record-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.record-type {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.record-duration {
  font-size: 26rpx;
  color: #07c160;
  margin-bottom: 5rpx;
}

.record-calories {
  font-size: 24rpx;
  color: #999;
}

.btn-small {
  padding: 10rpx 20rpx;
  font-size: 24rpx;
  min-height: auto;
  line-height: 1.5;
  margin: 0;
}