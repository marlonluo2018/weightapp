/**index.wxss**/
.container {
  padding: 0;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #2d3748;
  margin-bottom: 20rpx;
  padding-left: 10rpx;
}

/* 今日打卡记录 */
.today-records {
  padding: 0 30rpx;
  margin-top: 20rpx;
}

.records-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* 卡片样式 - 与统计页面保持一致 */
.card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid #e2e8f0;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

/* 统计列表样式 - 与统计页面保持一致 */
.stats-list {
  margin-top: 20rpx;
}

.stats-item {
  margin-bottom: 25rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.stats-item:last-child {
  border-bottom: none;
  margin-bottom: 0;
}

.stats-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.stats-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.stats-count {
  font-size: 24rpx;
  color: #07c160;
  font-weight: 500;
}

.stats-details {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.stats-duration {
  font-size: 26rpx;
  color: #666;
}

.stats-calories {
  font-size: 24rpx;
  color: #ff9500;
}

.stats-intensity {
  font-size: 24rpx;
  color: #666;
  background: #f5f5f5;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.stats-time {
  font-size: 26rpx;
  color: #666;
}

.stats-bmi {
  font-size: 24rpx;
  color: #4299e1;
  font-weight: 500;
}

.stats-change {
  font-size: 24rpx;
  color: #07c160;
  font-weight: 500;
}

.stats-change[data-negative="true"] {
  color: #ff6b35;
}

/* 饮食分析样式 - 与统计页面保持一致 */
.meal-stats {
  margin-top: 20rpx;
}

.meal-stat-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.meal-stat-item:last-child {
  border-bottom: none;
}

.meal-info {
  flex: 1;
}

.meal-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 5rpx;
  display: block;
}

.meal-count {
  font-size: 24rpx;
  color: #666;
}

.meal-calories {
  margin: 0 20rpx;
}

.calories-text {
  font-size: 26rpx;
  color: #ff9500;
  font-weight: 500;
}

.meal-portion {
  font-size: 24rpx;
  color: #666;
  background: #fff5f0;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.no-records {
  text-align: center;
  padding: 40rpx 0;
}

.no-records-text {
  font-size: 26rpx;
  color: #999;
}

/* 减肥目标进度样式 */
.weight-goal {
  margin: 20rpx 30rpx;
}

.goal-progress {
  margin-top: 20rpx;
}

/* 目标统计样式 */
.goal-stats {
  display: flex;
  justify-content: space-around;
  margin-bottom: 25rpx;
  padding: 20rpx 0;
  background: #f8f9fa;
  border-radius: 12rpx;
}


.goal-stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.goal-stat-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #07c160;
  margin-bottom: 6rpx;
}

.goal-stat-label {
  font-size: 22rpx;
  color: #666;
  text-align: center;
  line-height: 1.2;
}

.progress-info {
  margin-bottom: 20rpx;
}

.progress-text {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.progress-bar {
  width: 100%;
  height: 20rpx;
  background-color: #f0f0f0;
  border-radius: 10rpx;
  overflow: hidden;
  margin: 15rpx 0;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #07c160, #4cd964);
  border-radius: 10rpx;
  transition: width 0.5s ease-in-out;
}

/* 进度百分比样式 */
.progress-percentage {
  font-size: 24rpx;
  color: #07c160;
  font-weight: 500;
  text-align: center;
  display: block;
  margin-top: 10rpx;
}

